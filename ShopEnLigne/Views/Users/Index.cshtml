@model ShopEnLigne.Models.User
@{
    ViewData["Title"] = "Profil";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Profilestyle.css">
    <link rel="stylesheet" href="~/css/styleBien.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <section id="personal">
        <div class="profilePic" style="background-image: url('../Images/@Model.Photo')"></div>
    </section>
    
    <section id="infos">
        <p id="username">@Model.Username</p>
        <button style="height:50px;" class="settings" id="add" onclick="location.href='@Url.Action("Create", "Biens")'">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#213555" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="svg-icon">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            <span class="lable">Add item</span>
        </button>
        <a asp-action="Edit" asp-controller="Users" asp-route-id="@Model.Id" style="height:50px;text-decoration:none" class="settings" id="edit" type="submit">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" viewBox="0 0 20 20" height="20" fill="none" class="svg-icon"><g stroke-width="1.5" stroke-linecap="round" stroke="#213555"><circle r="2.5" cy="10" cx="10"></circle><path fill-rule="evenodd" d="m8.39079 2.80235c.53842-1.51424 2.67991-1.51424 3.21831-.00001.3392.95358 1.4284 1.40477 2.3425.97027 1.4514-.68995 2.9657.82427 2.2758 2.27575-.4345.91407.0166 2.00334.9702 2.34248 1.5143.53842 1.5143 2.67996 0 3.21836-.9536.3391-1.4047 1.4284-.9702 2.3425.6899 1.4514-.8244 2.9656-2.2758 2.2757-.9141-.4345-2.0033.0167-2.3425.9703-.5384 1.5142-2.67989 1.5142-3.21831 0-.33914-.9536-1.4284-1.4048-2.34247-.9703-1.45148.6899-2.96571-.8243-2.27575-2.2757.43449-.9141-.01669-2.0034-.97028-2.3425-1.51422-.5384-1.51422-2.67994.00001-3.21836.95358-.33914 1.40476-1.42841.97027-2.34248-.68996-1.45148.82427-2.9657 2.27575-2.27575.91407.4345 2.00333-.01669 2.34247-.97026z" clip-rule="evenodd"></path></g></svg>
            <span class="lable">Edit account</span>
        </a>
        <button style="height:50px;" class="settings" id="add" onclick="location.href='@Url.Action("Create", "OffreSpeciales")'">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#213555" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="svg-icon">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            <span class="lable">Add promotion</span>
        </button>
    </section>
    <section id="forSale">
        <div class="shop-content">
            @foreach (var bien in Model.Bien)
            {
               <!-- BOX 1 -->
            <div class="product-box">
                <img src="~/Images/@bien.Photo" alt="" class="product-img">
                <h2 class="product-title"> @bien.Titre </h2>
                <span class="product-price">$@bien.Prix</span>
                    <a asp-action="Edit" asp-controller="Biens" asp-route-id="@bien.Id">
                        <i class='bx bx-edit add-cart'></i>
                    </a>

            </div> 
            }
        </div>
    </section>
</body>
</html>